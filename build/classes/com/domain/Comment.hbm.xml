<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.domain.Comment"
        table="comment"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="increment"/>
        </id>

        <property
            name="topic_id"
            type="java.lang.Long"
            column="topic_id"
        />

        <property
            name="nickname"
            type="java.lang.String"
            column="nickname"
        />
        
        <property
            name="content"
            type="java.lang.String"
            column="content"
        />
        
        <property
            name="time"
            type="java.lang.String"
            column="time"
        />


    </class>

</hibernate-mapping>