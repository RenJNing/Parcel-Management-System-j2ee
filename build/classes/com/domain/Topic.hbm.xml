<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.domain.Topic" table="topic">
        <id
            name="topic_id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="increment"/>
        </id>

        <property
            name="title"
            type="java.lang.String"
            column="title"
        />
        
        <property
            name="content"
            type="java.lang.String"
            column="content"
        />
        
        <property
            name="nickname"
            type="java.lang.String"
            column="nickname"
        />
                        <property
            name="createtime"
            type="java.lang.String"
            column="createtime"
        />
                        <property
            name="leasttime"
            type="java.lang.String"
            column="leasttime"
        />
        

    </class>

</hibernate-mapping>